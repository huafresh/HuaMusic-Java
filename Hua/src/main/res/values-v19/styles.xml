<resources>

    <!--自定义toolbar样式-->
    <style name="ClubToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="titleTextAppearance">@style/ToolBar.Title</item>
    </style>

    <!--自定义toolbar样式-->
    <style name="ClubToolbarNight" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="titleTextAppearance">@style/ToolBar.Title.Night</item>
    </style>

    <style name="toolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="toolbarThemeNight" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/colorThemeNight</item>
    </style>

    <style name="Base.AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/ClubToolbar</item>
    </style>

    <style name="Base.AppTheme.Night" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/ClubToolbarNight</item>
    </style>

    <style name="popup.theme" parent="android:Theme.Holo.Light.DarkActionBar"/>

    <style name="popup.theme.Night" parent="ThemeOverlay.AppCompat.Dark"/>

    <!--白天模式主题-->
    <style name="AppTheme.Light" parent="Base.AppTheme.Light">
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
        <!--去掉状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--以下为自定义-->
        <!--主题色-->
        <item name="huaColorTheme">@color/colorTheme</item>
        <!--纯黑白色-->
        <item name="huaColorWhiteAndBlack">@color/colorWhite</item>
        <!--文本的颜色-->
        <item name="huaTextColor">@color/colorContent</item>
        <!--稍暗文本的颜色-->
        <item name="huaTextColor2">@color/colorContent2</item>
        <!--背景的颜色-->
        <item name="huaBagColor">@color/colorPageBg2</item>
        <!--稍暗背景的颜色-->
        <item name="huaBagColor2">@color/colorPageBg</item>
        <!--分割线-->
        <item name="huaColorDivider">@color/colorDivider</item>
        <!--红与白的切换-->
        <item name="huaRedAndWhite">@color/colorTheme</item>
        <!--黑与暗白的切换-->
        <item name="huaBlackAndBlack2">@color/colorContent</item>
        <!--纯白与主题黑的切换-针对侧滑设置-->
        <item name="huaWhiteAndThemeBlack">@color/colorWhite</item>
        <!--暗黑与主题黑的切换-针对歌单标题-->
        <item name="huaBlackAndThemeBlack">@color/songMenuTitle</item>
        <!--针对内涵每项的框-->
        <item name="huaJokeItemBg">@drawable/bg_joke_item</item>
        <!--白与暗白的切换-针对昵称-->
        <item name="huaWhiteAndWhite2">@color/colorPageBg2</item>
        <!--点击项被按下-->
        <item name="huaItemPress">@drawable/item_selector_white</item>
        <!--toolbar弹出窗主题-->
        <item name="huaToolBarPopupTheme">@style/popup.theme</item>

    </style>

    <!--夜间模式主题-->
    <style name="AppTheme.Night" parent="Base.AppTheme.Night">
        <item name="colorPrimary">@color/colorThemeNight</item>
        <item name="colorPrimaryDark">@color/colorThemeNight</item>
        <item name="colorAccent">@color/colorThemeNight</item>
        <!--去掉状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--以下为自定义-->
        <!--主题色-->
        <item name="huaColorTheme">@color/colorThemeNight</item>
        <!--纯黑白色-->
        <item name="huaColorWhiteAndBlack">@color/colorBlack</item>
        <!--文本的颜色-->
        <item name="huaTextColor">@color/colorContentNight</item>
        <!--稍暗文本的颜色-->
        <item name="huaTextColor2">@color/colorContentNight2</item>
        <!--背景的颜色-->
        <item name="huaBagColor">@color/colorPageBgNight</item>
        <!--稍暗背景的颜色-->
        <item name="huaBagColor2">@color/colorPageBgNight2</item>
        <!--分割线-->
        <item name="huaColorDivider">@color/colorDividerNight</item>
        <!--红与白的切换-->
        <item name="huaRedAndWhite">@color/colorContent2</item>
        <!--黑与暗白的切换-->
        <item name="huaBlackAndBlack2">@color/colorContent2</item>
        <!--纯白与主题黑的切换-->
        <item name="huaWhiteAndThemeBlack">@color/colorThemeNight</item>
        <!--暗黑与主题黑的切换-针对歌单标题-->
        <item name="huaBlackAndThemeBlack">@color/colorThemeNight</item>
        <!--针对内涵每项的框-->
        <item name="huaJokeItemBg">@drawable/bg_joke_item_night</item>
        <!--点击项被按下-->
        <item name="huaItemPress">@drawable/item_selector_black</item>
        <!--toolbar弹出窗主题-->
        <item name="huaToolBarPopupTheme">@style/popup.theme.Night</item>
        <!--白与暗白的切换-针对昵称-->
        <item name="huaWhiteAndWhite2">@color/colorContentNight</item>
    </style>

    <!--titleBar样式，Toolbar中调用此样式，可使水波纹效果是白色的，因不知原理，故不使用-->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionBarItemBackground">@drawable/toolbarItemBackground</item>
        <item name="selectableItemBackground">@drawable/toolbarItemBackground</item>
        <item name="titleTextAppearance">@style/ToolBar.Title</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitle</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textSize">18sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>

    <!--titlebar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--titlebar 标题-->
    <style name="ToolBar.Title.Night" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/colorThemeNight</item>
    </style>

    <!--titlebar 副标题-->
    <style name="Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9.0sp</item>
        <item name="android:textColor">#99ffffff</item>
    </style>

    <style name="popup">
        <item name="android:windowEnterAnimation">@anim/popup_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_out_anim</item>
    </style>

    <!--<style name="AppThemeSystem" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->
    
</resources>
