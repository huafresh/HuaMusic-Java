<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/list_item_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/song_menu_title_height"
            layout="@layout/include_song_menu_title"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_view_height"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:id="@+id/item_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clickable="true">
                <View
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:background="@drawable/music_item_next"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/song_menu_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/music_item_next"
                    android:textSize="15sp"
                    android:textColor="?attr/huaTextColor2"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/song_item_select"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_music_list_item_select"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/item_digital"
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/cover_padding"
                android:paddingTop="@dimen/cover_padding"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/song_item_select_online"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_music_list_item_select"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/text_digital"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/text_size_middle"
                    android:textColor="?attr/huaTextColor2"
                    android:gravity="center"
                    android:paddingLeft="@dimen/cover_padding"
                    android:paddingRight="@dimen/cover_padding"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/song_menu_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/song_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="有何不可"
                            android:singleLine="true"
                            android:textColor="?attr/huaTextColor"
                            android:textSize="@dimen/text_size_middle"/>
                        <TextView
                            android:id="@+id/song_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_small"
                            android:text="许嵩"
                            android:textColor="?attr/huaTextColor2"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/music_more"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:clickable="true"
                        android:layout_marginLeft="10dp"
                        android:background="?attr/huaItemPress">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_more2" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="?attr/huaColorDivider"
                    android:layout_gravity="bottom"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</layout>