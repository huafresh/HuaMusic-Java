<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:background="?attr/huaBagColor">
        <ListView
            android:id="@+id/slide_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/colorWhite">
        </ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:orientation="horizontal"
            android:background="?attr/huaWhiteAndThemeBlack">
            <TextView
                android:id="@+id/slide_setting"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/setting"
                android:textColor="?attr/huaTextColor"
                android:textSize="@dimen/text_size_middle"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/item_selector_white"/>
            <TextView
                android:id="@+id/slide_exit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/exit"
                android:textColor="?attr/huaTextColor"
                android:textSize="@dimen/text_size_middle"
                android:gravity="center"
                android:background="@drawable/item_selector_white"/>
        </LinearLayout>
    </LinearLayout>
</layout>