<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_play_bottom_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/huaWhiteAndWhite2"/>
            <SeekBar
                android:id="@+id/sb_play_bottom_seekBar"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/seek_bar_progress"
                android:maxHeight="2dp"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:thumb="@drawable/ic_seek_bar_progress_btn"
                android:thumbOffset="5dp" />
            <TextView
                android:id="@+id/tv_play_bottom_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/huaWhiteAndWhite2" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_play_bottom_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/play_mode_normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/iv_play_bottom_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_previous"/>
                <ImageView
                    android:id="@+id/iv_play_bottom_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play"/>
                <ImageView
                    android:id="@+id/iv_play_bottom_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_next"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>