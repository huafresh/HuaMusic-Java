<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/song_menu_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/song_menu_cover"
            android:layout_width="@dimen/list_view_height"
            android:layout_height="match_parent"
            android:src="@drawable/song_menu_default"
            android:layout_marginLeft="6dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/song_menu_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/song_menu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/music_local"
                        android:textSize="@dimen/text_size_middle"
                        android:textColor="?attr/huaTextColor"/>
                    <TextView
                        android:id="@+id/song_menu_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/music_sum_default2"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginTop="6dp"
                        android:textColor="?attr/huaTextColor2"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/song_menu_more"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/item_selector_white">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more2" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="?attr/huaColorDivider"
                android:layout_gravity="bottom"/>
        </FrameLayout>
    </LinearLayout>
</layout>