<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/app_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:clickable="true"
        android:background="?attr/huaWhiteAndThemeBlack">
        <LinearLayout
            android:id="@+id/hua"
            android:layout_width="?android:actionBarSize"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">
            <ImageView
                android:id="@+id/bottom_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_cover" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/hua"
            android:layout_toLeftOf="@+id/bottom_control"
            android:gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/tv_bottom_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/huaTextColor"
                />
            <TextView
                android:id="@+id/tv_bottom_text_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="?attr/huaTextColor2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/iv_bottom_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?attr/huaItemPress"
                android:src="@drawable/playbar_btn_playlist"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/iv_bottom_play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?attr/huaItemPress"
                android:src="@drawable/ic_play_bar_btn_play"
                android:layout_marginLeft="2dp"/>
            <ImageView
                android:id="@+id/iv_bottom_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?attr/huaItemPress"
                android:src="@drawable/ic_play_bar_btn_next"
                android:layout_marginLeft="2dp" />
        </LinearLayout>
    </RelativeLayout>
</layout>