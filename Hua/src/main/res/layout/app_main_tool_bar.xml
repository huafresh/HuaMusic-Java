<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true">
        <!--fitsSystemWindows放在这侧滑菜单才能全屏，不解-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">
            <LinearLayout
                android:id="@+id/slide_menu"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/titlebar_menu"
                    android:scaleType="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/image_news"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/title_bar_news"/>
                <ImageView
                    android:id="@+id/image_music"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/title_bar_music"/>
                <ImageView
                    android:id="@+id/image_joke"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/title_bar_joke"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="invisible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/actionbar_search"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</layout>